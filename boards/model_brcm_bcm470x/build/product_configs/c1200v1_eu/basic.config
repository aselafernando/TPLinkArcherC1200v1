#
# Basic var for special product
#

# Toolchain
TOOLCHAIN_NAME:=hndtools-arm-linux-2.6.36-uclibc-4.5.3
TOOLCHAIN_PACKAGE:=$(TOOLCHAIN_NAME).tar.bz2
TOOLCHAIN_ROOT_DIR:=$(TOOLCHAIN_DIR)/$(TOOLCHAIN_NAME)
TOOLCHAIN_PREFIX:=arm-uclibc-linux-2.6.36-

# SDK
SDK_NAME:=linux-2.6.36-router-9.10.178.27
SDK_ROOT_DIR:=$(SDK_DIR)/$(SDK_NAME)/main
SDK_BUILD_DIR:=$(SDK_ROOT_DIR)/components/router
SDK_TOOLS_PATH:=$(SDK_ROOT_DIR)/tools
SDK_BIN_DIR:=$(SDK_ROOT_DIR)/components/router/arm-uclibc/
SDK_KERNEL_DIR:=$(SDK_ROOT_DIR)/components/opensource/linux/linux-2.6.36
SDK_ROOTFS_DIR:=$(SDK_BIN_DIR)/target

SDK_FLAGS:=LINUX_VERSION=2_6_36 PLT=arm ARCH=arm

# CFE
UBOOT_BUILD_DIR:=$(SDK_ROOT_DIR)/src/cfe
UBOOT_FLAGS:=ARCH=arm CFG_PMU=1 PRODUCT_DIFF=C1200_V1_EU CFG_FIRMWARE_CHECK=1 CFG_DOUBLE_BOOT_SECOND=1
UBOOT_CALIBRATE_TEXT:=$(SDK_ROOT_DIR)/src/shared/nvram/tplink_archer_c1200v1_eu_nvram.txt

# FACTORY CFE
FACTORY_BUILD_DIR:=$(SDK_ROOT_DIR)/src/cfe
FACTORY_FLAGS:=ARCH=arm CFG_PMU=1 PRODUCT_DIFF=C1200_V1_EU CFG_FIRMWARE_CHECK=1 CFG_DOUBLE_BOOT_FACTORY=1
FACTORY_CALIBRATE_TEXT:=$(SDK_ROOT_DIR)/src/shared/nvram/tplink_archer_c1200v1_eu_nvram.txt

export ORIGINAL_PATH:=$(PATH)
export PATH:=$(ORIGINAL_PATH):$(TOOLCHAIN_ROOT_DIR)/bin:$(SDK_TOOLS_PATH)
export LD_LIBRARY_PATH:=$(TOOLCHAIN_ROOT_DIR)/lib
export CLM:=clm/c1200v1_eu

# fix kernel's vermagic
export LOCALVERSION=

# Image
IMAGE_ROOTFS_DIR:=$(IMAGE_DIR)/rootfs
IMAGE_TMP_DIR:=$(IMAGE_DIR)/tmpfs

# Other 
FLASH_SIZE=16
SQUASHFS_SIZE=0xBC0000

IMAGE_NAME_PREFIX=c1200v1_eu

